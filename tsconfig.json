{
  "compilerOptions": {
    "target": "es2020",                              
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./src",                               
    "paths": {
      "@/*": ["*"]
    },
    "sourceMap": true,
    "rootDirs": ["src"],
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,                                      
    "skipLibCheck": true                                 
  }
}
